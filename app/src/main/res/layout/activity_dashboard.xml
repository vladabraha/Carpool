<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Dashboard">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage car profiles"
        android:id="@+id/btnCarProfile"
        android:layout_marginTop="8dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Car pool"
        android:id="@+id/btnStartCarPool"
        android:layout_marginTop="8dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select car"
        android:id="@+id/btnSelectCar"
        android:layout_marginTop="8dp"
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete car profile"
            android:id="@+id/btnDeleteCar"
            android:layout_marginTop="8dp"
            />


</LinearLayout>